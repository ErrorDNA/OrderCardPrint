<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="TextBlockStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource LocalDarkGreen}" />
        <Setter Property="Background" Value="{DynamicResource LocalLightGreen}" />
        <Setter Property="TextWrapping" Value="WrapWithOverflow" />
        <Setter Property="FontSize" Value="18.75" />
        <Setter Property="LineHeight" Value="16" />
        <Setter Property="Height" Value="25" />
        <Setter Property="LineStackingStrategy" Value="BlockLineHeight" />
        <Setter Property="Padding" Value="0,4,0,0" />
    </Style>
    <Style x:Key="TextBlockSubHeaderStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlockStyle}">
        <Setter Property="Background" Value="{DynamicResource LocalDarkToLightGreen}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Padding" Value="2,4,0,0" />
        <Setter Property="Height" Value="22" />
    </Style>
</ResourceDictionary>